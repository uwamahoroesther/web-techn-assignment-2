<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/aucadb</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class="rw.ac.auca.model.AccademicUnit"/>
        <mapping class="rw.ac.auca.model.CourceDefinition"/>
        <mapping class="rw.ac.auca.model.Teacher"/>
        <mapping class="rw.ac.auca.model.Student"/>
        <mapping class="rw.ac.auca.model.Semester"/>
        <mapping class="rw.ac.auca.model.Cource"/>
        <mapping class="rw.ac.auca.model.StudentRegistration"/>
        <mapping class="rw.ac.auca.model.StudentCource"/>
        <mapping class="rw.ac.auca.model.SystemUser"/>
        <mapping class="rw.ac.auca.model.StudentUser"/>
    </session-factory>
</hibernate-configuration>
